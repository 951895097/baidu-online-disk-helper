{
  "name": "baidu-online-disk-helper",
  "description": "方便将网页中的链接直接使用百度网盘离线下载",
  "version": "2.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "baidu-online-disk-helper",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "contextMenus", "activeTab", "notifications", "webRequest", "storage", "cookies", "http://pan.baidu.com/*", "https://pan.baidu.com/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["http://localhost/*", "https://pan.baidu.com/*", "http://pan.baidu.com/*", "https://www.google.com/*", "https://www.baidu.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["baidu-online-disk-helper.js"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "homepage_url": "https://github.com/guyanyijiu/baidu-online-disk-helper"
}
